<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Meu Perfil</title>
  <link rel="stylesheet" href="/styles.css">

  <style>
    body {
      background: #f5f7fb;
    }

    .profile-container {
      max-width: 1000px;
      margin: 50px auto;
      padding: 40px;
      background: white;
      border-radius: 28px;
      box-shadow: 0 20px 45px rgba(0,0,0,.08);
    }

    /* HEADER */
    .profile-header {
      display: flex;
      align-items: center;
      gap: 30px;
      margin-bottom: 40px;
    }

    .avatar {
      width: 140px;
      height: 140px;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid #6366f1;
    }

    .user-main h1 {
      margin: 0;
      font-size: 30px;
    }

    .user-main p {
      margin: 6px 0;
      color: #64748b;
    }

    .bio-box {
      margin-top: 15px;
      background: #f8fafc;
      padding: 14px 18px;
      border-radius: 16px;
      border: 1px solid #e2e8f0;
      color: #475569;
      font-size: 0.95rem;
    }

    /* SECTIONS */
    .section {
      margin-top: 45px;
    }

    .section h2 {
      font-size: 22px;
      margin-bottom: 15px;
    }

    .card {
      background: #f8fafc;
      padding: 25px;
      border-radius: 20px;
      border: 1px solid #e2e8f0;
    }

    textarea, input[type="file"] {
      width: 100%;
      padding: 12px;
      border-radius: 14px;
      border: 1px solid #e2e8f0;
      font-family: inherit;
      font-size: 0.95rem;
    }

    textarea {
      resize: vertical;
    }

    /* FAVORITOS */
    .search-box {
      margin-bottom: 15px;
    }

    .book-list {
      max-height: 280px;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .book-item {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 10px;
      border-radius: 14px;
      background: white;
      border: 1px solid #e2e8f0;
      cursor: pointer;
      transition: 0.2s;
    }

    .book-item:hover {
      background: #eef2ff;
      border-color: #6366f1;
    }

    .book-item img {
      width: 45px;
      height: 65px;
      border-radius: 6px;
      object-fit: cover;
    }

    /* CHECKBOX CUSTOMIZADO */
.book-item input[type="checkbox"] {
  display: none;
}

.book-item {
  position: relative;
}

.book-item::after {
  content: "‚úì";
  position: absolute;
  top: 10px;
  right: 12px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background: #6366f1;
  color: white;
  font-size: 13px;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transform: scale(0.6);
  transition: 0.2s;
}

.book-item:has(input:checked)::after {
  opacity: 1;
  transform: scale(1);
}

.book-item:has(input:checked) {
  border-color: #6366f1;
  background: #eef2ff;
}


    .book-info {
      flex: 1;
    }

    .book-info strong {
      font-size: 0.95rem;
    }

    .book-info small {
      color: #64748b;
    }

    .favorites-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 16px;
      margin-top: 15px;
    }

    .favorite-card {
      background: #f8fafc;
      padding: 12px;
      border-radius: 18px;
      border: 1px solid #e2e8f0;
      text-align: center;
    }

    .favorite-card img {
      width: 100%;
      aspect-ratio: 2/3;
      object-fit: cover;
      border-radius: 14px;
      margin-bottom: 8px;
    }

    /* EMPTY */
    .empty {
      text-align: center;
      color: #64748b;
      padding: 30px;
    }

    /* DANGER */
    .danger-zone {
      margin-top: 60px;
      padding: 30px;
      background: linear-gradient(135deg, #fff1f2, #ffe4e6);
      border: 1px solid #fecdd3;
      border-radius: 24px;
    }

    .danger-zone h3 {
      margin: 0 0 10px;
      color: #be123c;
    }

    .danger-zone p {
      margin: 0 0 15px;
      color: #7f1d1d;
      font-size: 0.95rem;
    }

    .danger-zone button {
      background: linear-gradient(135deg, #ef4444, #dc2626);
      color: white;
      border: none;
      padding: 12px 22px;
      border-radius: 16px;
      font-weight: 600;
      cursor: pointer;
      box-shadow: 0 8px 25px rgba(239,68,68,0.35);
    }
  </style>
</head>
<body>

<div class="profile-container">

  <!-- HEADER -->
  <div class="profile-header">
    <img class="avatar" src="<%= user.avatar || '/default-avatar.png' %>">

    <div class="user-main">
      <h1>@<%= user.username %></h1>
      <p><%= user.email %></p>

      <% if (user.bio) { %>
        <div class="bio-box"><%= user.bio %></div>
      <% } %>
    </div>
  </div>

  <!-- EDITAR PERFIL -->
  <div class="section">
    <h2>‚úèÔ∏è Editar perfil</h2>

    <div class="card">
      <form method="POST" action="/profile" enctype="multipart/form-data">
        <label>Foto de perfil</label><br><br>
        <input type="file" name="avatar">

        <br><br>

        <label>Biografia</label><br><br>
        <textarea name="bio" rows="4"><%= user.bio || "" %></textarea>

        <br><br>
        <button class="button">Salvar altera√ß√µes</button>
      </form>
    </div>
  </div>

  <!-- FAVORITOS -->
  <div class="section">
    <h2>üìö Livros favoritos (at√© 5)</h2>

    <input
      type="text"
      id="searchInput"
      placeholder="Pesquisar livro por t√≠tulo..."
      class="search-box"
      onkeyup="filterBooks()"
    >

    <div class="card">
      <% if (books.length === 0) { %>
        <div class="empty">Voc√™ ainda n√£o tem livros na biblioteca.</div>
      <% } else { %>
        <form method="POST" action="/favorites">
          <div class="book-list" id="bookList">
            <% books.forEach(book => { %>
              <label class="book-item">
                <input type="checkbox" name="favorites" value="<%= book.id %>"
                  <%= favorites.some(f => f.id === book.id) ? "checked" : "" %>>

                <img src="<%= book.cover_url || '/no-cover.png' %>">

                <div class="book-info">
                  <strong><%= book.title %></strong><br>
                  <small><%= book.author %></small>
                </div>
              </label>
            <% }) %>
          </div>

          <br>
          <button class="button">Salvar favoritos</button>
        </form>
      <% } %>
    </div>
  </div>

  <!-- EXIBI√á√ÉO FAVORITOS -->
  <div class="section">
    <h2>‚ú® Seus favoritos</h2>

    <% if (favorites.length === 0) { %>
      <div class="empty">Nenhum favorito selecionado ainda.</div>
    <% } else { %>
      <div class="favorites-grid">
        <% favorites.forEach(book => { %>
          <div class="favorite-card">
            <img src="<%= book.cover_url || '/no-cover.png' %>">
            <strong><%= book.title %></strong>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <div style="margin-top:35px;">
    <a href="/" class="button">‚Üê Voltar para biblioteca</a>
  </div>

  <!-- DANGER -->
  <div class="danger-zone">
    <h3>‚ö† Zona sens√≠vel</h3>
    <p>Apagar sua conta remover√° permanentemente todos os seus dados.</p>

    <form method="POST" action="/delete-account" onsubmit="return confirm('Tem certeza absoluta?');">
      <button>Apagar minha conta</button>
    </form>
  </div>

</div>

<script>
  function filterBooks() {
    const input = document.getElementById("searchInput").value.toLowerCase();
    document.querySelectorAll(".book-item").forEach(item => {
      item.style.display = item.innerText.toLowerCase().includes(input)
        ? "flex"
        : "none";
    });
  }
</script>

</body>
</html>

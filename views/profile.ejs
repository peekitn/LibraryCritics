<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Meu Perfil</title>
  <link rel="stylesheet" href="/styles.css">

  <style>
    body {
      background: #f5f7fb;
    }

    .profile-container {
      max-width: 950px;
      margin: 50px auto;
      padding: 35px;
      background: white;
      border-radius: 24px;
      box-shadow: 0 15px 40px rgba(0,0,0,.08);
    }

    .profile-header {
      display: flex;
      align-items: center;
      gap: 25px;
      margin-bottom: 30px;
    }

    .avatar {
      width: 130px;
      height: 130px;
      border-radius: 50%;
      object-fit: cover;
      border: 4px solid #6366f1;
    }

    .user-info h1 {
      margin: 0;
      font-size: 28px;
    }

    .user-info p {
      margin: 6px 0 0;
      color: #64748b;
    }

    .section {
      margin-top: 35px;
    }

    .section h2 {
      font-size: 20px;
      margin-bottom: 12px;
    }

    textarea, input[type="file"], input[type="text"] {
      width: 100%;
      padding: 12px;
      border-radius: 14px;
      border: 1px solid #e2e8f0;
      font-family: inherit;
      font-size: 0.95rem;
    }

    textarea {
      resize: vertical;
    }

    /* SEARCH */
    .search-box {
      margin-bottom: 15px;
    }

    /* LISTA DE LIVROS */
    .book-list {
      max-height: 260px;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .book-item {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 10px;
      border-radius: 14px;
      background: #f8fafc;
      border: 1px solid #e2e8f0;
      cursor: pointer;
      transition: 0.2s;
    }

    .book-item:hover {
      background: #eef2ff;
      border-color: #6366f1;
    }

    .book-item img {
      width: 45px;
      height: 65px;
      border-radius: 6px;
      object-fit: cover;
    }

    .book-info {
      flex: 1;
    }

    .book-info strong {
      font-size: 0.95rem;
    }

    .book-info small {
      color: #64748b;
    }

    /* FAVORITOS VISUAIS */
    .favorites-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
      gap: 15px;
      margin-top: 10px;
    }

    .favorite-card {
      background: #f8fafc;
      padding: 12px;
      border-radius: 16px;
      border: 1px solid #e2e8f0;
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .favorite-card img {
      width: 100%;
      aspect-ratio: 2/3;
      object-fit: cover;
      border-radius: 12px;
    }

    /* DANGER ZONE */
    .danger-zone {
      margin-top: 50px;
      padding: 25px;
      background: linear-gradient(135deg, #fff1f2, #ffe4e6);
      border: 1px solid #fecdd3;
      border-radius: 20px;
    }

    .danger-zone h3 {
      margin: 0 0 10px 0;
      color: #be123c;
    }

    .danger-zone p {
      margin: 0 0 15px 0;
      color: #7f1d1d;
      font-size: 0.95rem;
    }

    .danger-zone button {
      background: linear-gradient(135deg, #ef4444, #dc2626);
      color: white;
      border: none;
      padding: 10px 18px;
      border-radius: 14px;
      font-weight: 600;
      cursor: pointer;
      box-shadow: 0 8px 25px rgba(239,68,68,0.35);
    }
  </style>
</head>
<body>

<div class="profile-container">

  <!-- HEADER -->
  <div class="profile-header">
    <img class="avatar" src="<%= user.avatar || '/default-avatar.png' %>">

    <div class="user-info">
      <h1>@<%= user.username %></h1>
      <p><%= user.email %></p>
    </div>
  </div>

  <!-- EDITAR PERFIL -->
  <div class="section">
    <h2>‚úèÔ∏è Editar perfil</h2>

    <form method="POST" action="/profile" enctype="multipart/form-data">
      <label>Foto de perfil</label>
      <input type="file" name="avatar">

      <br><br>

      <label>Biografia</label>
      <textarea name="bio" rows="4"><%= user.bio || "" %></textarea>

      <br><br>

      <button class="button">Salvar altera√ß√µes</button>
    </form>
  </div>

  <!-- FAVORITOS COM BUSCA -->
  <div class="section">
    <h2>üìö Escolha at√© 5 livros favoritos</h2>

    <input
      type="text"
      id="searchInput"
      placeholder="Pesquisar livro por t√≠tulo..."
      class="search-box"
      onkeyup="filterBooks()"
    >

    <form method="POST" action="/favorites">
      <div class="book-list" id="bookList">
        <% books.forEach(book => { %>
          <label class="book-item">
            <input type="checkbox" name="favorites" value="<%= book.id %>"
              <%= favorites.some(f => f.id === book.id) ? "checked" : "" %> >

            <img src="<%= book.cover_url || '/no-cover.png' %>">

            <div class="book-info">
              <strong><%= book.title %></strong><br>
              <small><%= book.author %></small>
            </div>
          </label>
        <% }) %>
      </div>

      <br>
      <button class="button">Salvar favoritos</button>
    </form>
  </div>

  <!-- EXIBI√á√ÉO FAVORITOS -->
  <div class="section">
    <h2>‚ú® Seus favoritos</h2>

    <div class="favorites-grid">
      <% favorites.forEach(book => { %>
        <div class="favorite-card">
          <img src="<%= book.cover_url || '/no-cover.png' %>">
          <strong><%= book.title %></strong>
        </div>
      <% }) %>
    </div>
  </div>

  <div style="margin-top:30px;">
    <a href="/" class="button">‚Üê Voltar para biblioteca</a>
  </div>

  <!-- DANGER -->
  <div class="danger-zone">
    <h3>‚ö† Zona sens√≠vel</h3>
    <p>Apagar sua conta remover√° permanentemente todos os seus dados.</p>

    <form method="POST" action="/delete-account" onsubmit="return confirm('Tem certeza absoluta?');">
      <button>Apagar minha conta</button>
    </form>
  </div>

</div>

<script>
  function filterBooks() {
    const input = document.getElementById("searchInput").value.toLowerCase();
    const items = document.querySelectorAll(".book-item");

    items.forEach(item => {
      const text = item.innerText.toLowerCase();
      item.style.display = text.includes(input) ? "flex" : "none";
    });
  }
</script>

</body>
</html>
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Reading Wrapped</title>
  <link rel="stylesheet" href="/styles.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

  <style>
    .dashboard-header { margin-bottom: 50px; }
    .year-selector { margin-top: 25px; margin-bottom: 50px; }

    .empty-graph {
      text-align: center;
      padding: 50px 20px;
      color: #64748b;
    }

    .empty-graph img {
      max-width: 220px;
      margin-bottom: 20px;
    }

    .badges {
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
      margin-top: 15px;
    }

    .badge {
      padding: 8px 14px;
      border-radius: 999px;
      font-size: 0.85rem;
      font-weight: 600;
      background: #eef2ff;
      color: #4338ca;
    }

    .compare-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 15px;
      margin-top: 20px;
    }

    .compare-card {
      background: #f8fafc;
      border-radius: 16px;
      padding: 15px;
      text-align: center;
      border: 1px solid #e2e8f0;
    }

    .compare-card strong {
      font-size: 1.3rem;
      display: block;
    }
  </style>
</head>
<body>

<div class="container">

  <!-- HEADER -->
  <div class="dashboard-header">
    <h1>ğŸ“Š Reading Wrapped <%= selectedYear %></h1>
    <p><strong><%= readerProfile %></strong></p>

    <form method="GET" action="/dashboard" class="year-selector">
      <select name="year" onchange="this.form.submit()">
        <% years.forEach(y => { %>
          <option value="<%= y.year %>" <%= y.year == selectedYear ? "selected" : "" %>>
            <%= y.year %>
          </option>
        <% }) %>
      </select>
    </form>
  </div>

  <% if (totalYear === 0) { %>

    <!-- ESTADO VAZIO -->
    <div class="card" style="text-align:center;padding:50px;">
      <h2>ğŸ“­ Nenhuma leitura em <%= selectedYear %></h2>
      <p>Quando vocÃª adicionar livros, seu Reading Wrapped aparece aqui.</p>
      <br>
      <a href="/new" class="button">â• Adicionar primeiro livro</a>
    </div>

  <% } else { %>

    <!-- MÃ‰TRICAS -->
    <div class="grid">
      <div class="card">
        <h3>ğŸ“š Total</h3>
        <p style="font-size:2rem;"><%= totalYear %></p>
      </div>

      <div class="card">
        <h3>ğŸ“… MÃ©dia mensal</h3>
        <p style="font-size:2rem;"><%= avgPerMonth %></p>
      </div>

      <div class="card">
        <h3>â­ Nota mÃ©dia</h3>
        <p style="font-size:2rem;"><%= avgRating || "â€”" %></p>
      </div>

      <div class="card">
        <h3>ğŸ·ï¸ Tag do ano</h3>
        <p style="font-size:1.5rem;"><%= topTag || "â€”" %></p>
      </div>
    </div>

    <!-- BADGES -->
    <div class="card" style="margin-top:45px;">
      <h2>ğŸ… Badges de leitura</h2>

      <div class="badges">
        <% if (totalYear >= 1) { %><span class="badge">ğŸ“– Primeira leitura</span><% } %>
        <% if (totalYear >= 5) { %><span class="badge">ğŸ”¥ 5 livros</span><% } %>
        <% if (totalYear >= 10) { %><span class="badge">ğŸ’ª 10 livros</span><% } %>
        <% if (totalYear >= 25) { %><span class="badge">ğŸ† 25 livros</span><% } %>
        <% if (totalYear >= 50) { %><span class="badge">ğŸ‘‘ 50 livros</span><% } %>
      </div>
    </div>

    <!-- COMPARAÃ‡ÃƒO ENTRE ANOS (SAFE) -->
    <% if (typeof compareYears !== "undefined" && compareYears.length > 0) { %>
      <div class="card" style="margin-top:45px;">
        <h2>ğŸ“Š ComparaÃ§Ã£o entre anos</h2>

        <div class="compare-grid">
          <% compareYears.forEach(y => { %>
            <div class="compare-card">
              <small><%= y.year %></small>
              <strong><%= y.total %></strong>
              <span>livros</span>
            </div>
          <% }) %>
        </div>
      </div>
    <% } %>

    <!-- GRÃFICO -->
    <div class="card" style="margin-top:45px;">
      <h2>ğŸ“ˆ EvoluÃ§Ã£o mensal</h2>

      <% if (!chartData || chartData.length === 0) { %>
        <div class="empty-graph">
          <img src="/empty-reading.svg">
          <p>Adicione leituras ao longo do ano para ver seu progresso.</p>
        </div>
      <% } else { %>
        <canvas id="chart"></canvas>
      <% } %>
    </div>

  <% } %>

  <br><br>
  <a href="/" class="button">â† Voltar</a>

</div>

<% if (chartData && chartData.length > 0) { %>
<script>
  const data = JSON.parse('<%- JSON.stringify(chartData) %>');

  new Chart(document.getElementById("chart"), {
    type: "line",
    data: {
      labels: data.map(d => d.month),
      datasets: [{
        data: data.map(d => d.total),
        fill: true,
        tension: 0.4,
        borderWidth: 3,
        pointRadius: 6,
        backgroundColor: ctx => {
          const g = ctx.chart.ctx.createLinearGradient(0,0,0,300);
          g.addColorStop(0,"rgba(99,102,241,.4)");
          g.addColorStop(1,"rgba(99,102,241,.05)");
          return g;
        }
      }]
    },
    options: {
      plugins: { legend: { display: false } },
      scales: { y: { beginAtZero: true, ticks: { stepSize: 1 } } }
    }
  });
</script>
<% } %>

</body>
</html>
